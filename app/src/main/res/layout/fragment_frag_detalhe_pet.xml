<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey300"
    tools:context="thiagocury.eti.br.centoeumviralatas.FragDetalhePet">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/linear_marg">

            <ImageView
                android:layout_width="@dimen/larg_alt_img_detalhe"
                android:layout_height="@dimen/larg_alt_img_detalhe"
                android:id="@+id/ivFotofragDetalhe"
                android:src="@mipmap/ic_logotipo"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvNomefragDetalhe"
                android:layout_margin="@dimen/marg_campo_detalhe"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvIdadefragDetalhe"
                android:layout_margin="@dimen/marg_campo_detalhe"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvSexofragDetalhe"
                android:layout_margin="@dimen/marg_campo_detalhe"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvPortefragDetalhe"
                android:layout_margin="@dimen/marg_campo_detalhe"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvTemperamentofragDetalhe"
                android:layout_margin="@dimen/marg_campo_detalhe"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvHistoriafragDetalhe"
                android:layout_margin="@dimen/marg_campo_detalhe"
                android:paddingBottom="@dimen/marg_campo_detalhe"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnAdote"
                android:id="@+id/btnAdotefragDetalhe"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/borda_botao"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/moip_marg_larg"
                android:layout_marginRight="@dimen/moip_marg_larg"
                android:layout_marginBottom="@dimen/marg_texto_top"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnDetalhePetApadrinhePeludo"
                android:id="@+id/btnDetalhePetApadrinhePeludofragDetalhe"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/borda_botao"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/moip_marg_larg"
                android:layout_marginRight="@dimen/moip_marg_larg" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
